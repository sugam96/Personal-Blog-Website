<%- include('partials/header'); -%>
    <h1>Home</h1>
    <p>
        <%= content %>
    </p>
    <div>
        <% posts.forEach(function(post) { %>
            <h3>
                <%= post.title %>
            </h3>
            <p>
                <%= (post.content.length> 100) ? post.content.slice(0, 99) + '...' : post.content; %>
                    <a href="/posts/<%=post.title%>">Read More</a>
            </p>
            <% }); %>
    </div>
    <%- include('partials/footer'); -%>